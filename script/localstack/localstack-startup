#!/bin/bash

# This script starts the LocalStack service in the Docker container and pre-populates the DynamoDB tables

OFF='\033[0m' # Text color Reset
BLUE='\033[0;34m' # Blue
GREEN='\033[0;32m' # Green

echo -e "‚öôÔ∏è ${BLUE}======= Starting LocalStack (detached) =======${OFF}"

make start & disown

echo -e "‚öôÔ∏è ${BLUE}======= Creating DynamoDB Tables =======${OFF}"

export AWS_ACCESS_KEY_ID=test
export AWS_SECRET_ACCESS_KEY=test
export AWS_DEFAULT_REGION=us-west-2

echo -e "${BLUE}Creating BotDataTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name botdata \
    --attribute-definitions \
        AttributeName=key,AttributeType=S \
    --key-schema \
        AttributeName=key,KeyType=HASH \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created BotDataTable...${OFF}"

echo -e "‚öôÔ∏è ${BLUE}Creating LeagueTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name league \
    --attribute-definitions \
        AttributeName=discord_server_id,AttributeType=N \
        AttributeName=discord_handle,AttributeType=S \
    --key-schema \
        AttributeName=discord_server_id,KeyType=HASH \
        AttributeName=discord_handle,KeyType=RANGE \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created LeagueTable...${OFF}"

echo -e "‚öôÔ∏è ${BLUE}Creating EftItemTrackerTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name eftitemtracker \
    --attribute-definitions \
        AttributeName=server_id,AttributeType=N \
        AttributeName=item,AttributeType=S \
    --key-schema \
        AttributeName=server_id,KeyType=HASH \
        AttributeName=item,KeyType=RANGE \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created LeagueTable...${OFF}"

echo -e "${BLUE}Creating RememberTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name remember \
    --attribute-definitions \
        AttributeName=discord_server_id,AttributeType=N \
        AttributeName=rem_key,AttributeType=S \
    --key-schema \
        AttributeName=discord_server_id,KeyType=HASH \
        AttributeName=rem_key,KeyType=RANGE \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created RememberTable...${OFF}"

echo -e "${BLUE}Creating LoudTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name loud \
    --attribute-definitions \
        AttributeName=discord_server_id,AttributeType=N \
        AttributeName=discord_handle,AttributeType=S \
    --key-schema \
        AttributeName=discord_server_id,KeyType=HASH \
        AttributeName=discord_handle,KeyType=RANGE \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created LoudTable...${OFF}"

echo -e "${BLUE}Creating PlayTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name play \
    --attribute-definitions \
        AttributeName=discord_server_id,AttributeType=N \
    --key-schema \
        AttributeName=discord_server_id,KeyType=HASH \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created PlayTable...${OFF}"

echo -e "${BLUE}Creating TtsTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name tts \
    --attribute-definitions \
        AttributeName=discord_server_id,AttributeType=N \
        AttributeName=discord_handle,AttributeType=S \
    --key-schema \
        AttributeName=discord_server_id,KeyType=HASH \
        AttributeName=discord_handle,KeyType=RANGE \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created TtsTable...${OFF}"

echo -e "${BLUE}Creating SparkleTable...${OFF}"
aws dynamodb --endpoint-url=${LOCALSTACK_HOST} create-table \
    --table-name sparkle \
    --attribute-definitions \
        AttributeName=discord_server_id,AttributeType=N \
        AttributeName=discord_handle,AttributeType=S \
    --key-schema \
        AttributeName=discord_server_id,KeyType=HASH \
        AttributeName=discord_handle,KeyType=RANGE \
--provisioned-throughput \
        ReadCapacityUnits=10,WriteCapacityUnits=5
echo -e "‚úÖ ${GREEN}Created SparkleTable...${OFF}"

echo -e "‚úÖ ${GREEN}All Tables Built and LocalStack Running!${OFF}"
echo -e ""
echo -e "üü¢ ${GREEN}Entering 'sleep infinity' command to keep myself running :)${OFF}"

sleep infinity
